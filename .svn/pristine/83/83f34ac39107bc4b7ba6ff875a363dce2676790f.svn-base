	import {shows} from "../../js/scrollHtml.js"
	export default {
		name: 'Partner',
		components: {
			Nav,
			Footer,
			Top
		},
		data() {
			return {
				widthnum: '100%',
				topClass: '',
				topClassOne: '',
				leftClass: '',
				rightClass: '',
				showTop: false,
				showBottom: true
			}
		},
		mounted() {
			shows();
			this.aboutusScroll();
			$(".index-nav>div a:eq(2)").addClass("nav_active");
			if (window.outerHeight > 800) {
				this.scrollnumber($('.home-site-title'), 'font_active_up', 50, 1);
			}
			window.addEventListener('scroll', this.NavScrollFunction, true);
		},
		methods: {
			Welfare() {
				let scroll = setInterval(() => {
					document.documentElement.scrollTop = 384;
					clearInterval(scroll);
				}, 0)

			},
			Study() {
				let scroll = setInterval(() => {
					document.documentElement.scrollTop = 873;
					clearInterval(scroll);
				}, 0)
			},
			Recruitment() {
				let scroll = setInterval(() => {
					document.documentElement.scrollTop = 1474;
					clearInterval(scroll);
				}, 0)

			},
			NavScrollFunction() {
				this.scrollnumber($('.home-site-title'), 'font_active_up', 50, 1);
				if (document.documentElement.scrollTop >= 582) {
					this.showTop = true;
					this.showBottom = false;
				} else {
					this.showTop = false;
					this.showBottom = true;
				}

				$(".partner-introduce-top-box .partner-introduce-box-left span").removeClass("active");
				if (document.documentElement.scrollTop >= 873 && document.documentElement.scrollTop <= 1473) {
					$(".partner-introduce-box-left span:eq(1)").addClass("active");
				} else if (document.documentElement.scrollTop >= 1473) {
					$(".partner-introduce-box-left span:eq(2)").addClass("active");
				} else if (document.documentElement.scrollTop <= 873) {
					$(".partner-introduce-box-left span:eq(0)").addClass("active");
				}
			},
			scrollnumber(element, cssname, offset, type) {
				let a, b, c, d;
				d = $(element).offset().top;
				a = eval(d + offset);
				b = $(window).scrollTop();
				c = $(window).height();
				if (b + c > a) {
					if (type == 1 && this.topClass == "") {
						this.topClass = 'font_active_up';
						this.leftClass = 'font_active_left';
						this.rightClass = 'font_active_right';
					}
				}
			},
			aboutusScroll() {
				let url = location.href;
				let index = url.lastIndexOf("=");
				console.log(index)
				let subBack = url.substring(index + 1, url.length);
				if (subBack == 1) {
					setTimeout(() => {
						document.documentElement.scrollTop = 384
					}, 300)
				} else if (subBack == 2) {
					setTimeout(() => {
						document.documentElement.scrollTop = 873
					}, 300)
				} else if (subBack == 3) {
					setTimeout(() => {
						document.documentElement.scrollTop = 1474
					}, 300)
				}
			}
		}
	}
</script>

